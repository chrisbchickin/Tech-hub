<div id="homepage-container">
  <div id="cards-container">
    {{#each posts as |post| }}
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">Created by {{post.user.username}} on {{format_date post.createdAt}}</h6>
        <a class="btn btn-primary" href="/posts/{{post.id}}">View Post</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
